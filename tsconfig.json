{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./", // Optional: base directory for module resolution
    // Include three.js and Node.js types
    "paths": {
      "three/*": ["node_modules/three/src/*"],
      "classes/*": ["./classes/*"]
    },
    "types": [
      "three",
      "node"
    ],
    "target": "ES6",
    "noResolve": false
  },
  "include": ["./*", "./classes/*"]
}
